@using System.Linq
@model Nidan.Models.BatchAttendanceViewModel

@{
    ViewBag.Title = "Create Attendance";
}
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Create new Attendance <small></small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal form-label-left">
                        @if (ViewContext.ViewData.ModelState.Any(x => x.Key == ""))
                        {
                            <div class="row">
                                <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                                    @Html.ValidationSummary(false, null, new { @class = "row alert alert-error" })
                                </div>
                            </div>
                        }
                        @Html.Partial("_Attendance", Model)
                       

                        <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                            <div class="form-group">
                                <div class="pull-right">
                                    <button type="submit" class="btn btn-success">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        @Html.Partial("_AttendanceDataGrid", Model)
    </div>
</div>

@section scripts{
<script>
    var daterangepickerOptions = {
        autoUpdateInput: false,
        singleDatePicker: true,
        showDropdowns: true,
        showCustomRangeLabel: false,
        opens: 'left',
        //minDate: moment(),
        //maxDate: moment().add('2', 'days').format('DD MMMM YYYY'),
        onSelect: function () {
            // selectedDate = moment().format('DD MMMM YYYY');
            $('#Counselling_FollowUpDate').val(moment().format('DD MMMM YYYY'));
            $('#Enquiry_FollowUpDate').val(moment().format('DD MMMM YYYY'));
        },
        locale: {
            "format": "DD MMMM YYYY"
        }
    };

    jQuery(".date").daterangepicker(daterangepickerOptions);
    $(".date").on('apply.daterangepicker', function (ev, picker) {
        $(this).val(picker.startDate.format('DD MMMM YYYY'));
    });

</script>
}

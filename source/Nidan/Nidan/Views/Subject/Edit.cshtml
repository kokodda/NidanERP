@using Nidan.Extensions
@model Nidan.Models.SubjectViewModel

@{
    ViewBag.Title = string.Format("Edit Subject ({0})", Model.Subject.Name);
}
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>@Model.Subject.Name<small>Edit Subject</small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @if (ViewContext.ViewData.ModelState.Any(x => x.Key == ""))
                        {
                            <div class="row">
                                <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                                    @Html.ValidationSummary(false, null, new { @class = "row alert alert-error" })
                                </div>
                            </div>

                        }
                        @Html.HiddenFor(model => Model.Subject.SubjectId)
                        @Html.Partial("_Subject", Model)
                        @if (User.IsInAnyRoles("Admin"))
                        {
                            <div class="row">
                                <div class="col-xs-12">
                                    <a class="btn btn-app" href="@Url.Action("Upload", "Subject")">
                                        <i class="fa fa-upload"></i> Upload
                                    </a>
                                </div>
                            </div>
                        }

                        @Html.Partial("_SessionView", Model)

                        <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                            <div class="form-group">
                                <div class="pull-right">
                                    <button type="submit" class="btn btn-success">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div>
    <a href="@Url.Action("Index")" class="btn btn-primary" role="button">
        <span class="fa fa-chevron-left"></span>&nbsp;Back to list
    </a>
</div>
@model Nidan.Models.CompanyFollowUpViewModel
<div class="form-control-required-example"> = Required</div>
<br />
<br />
@{
    var hrEmail1 = Model.HREmail1;
    var hrContact1 = Model.HRContact1;
    var hrName1 = Model.HRName1;
    var hrEmail2 = Model.HREmail2;
    var hrContact2 = Model.HRContact2;
    var hrName2 = Model.HRName2;
}
<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-4">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-dark">HR1 Name</button>
                </span>
                <input type="text" disabled="disabled" value="@hrName1" class="form-control col-lg-4">
            </div>
        </div>
        <div class="col-lg-4">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-dark">HR1 Contact</button>
                </span>
                <input type="text" disabled="disabled" value="@hrContact1" class="form-control col-lg-4">
            </div>
        </div>
        <div class="col-lg-4">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-dark">HR1 Email</button>
                </span>
                <input type="text" disabled="disabled" value="@hrEmail1" class="form-control col-lg-4">
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="col-lg-4">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-dark">HR2 Name</button>
                </span>
                <input type="text" disabled="disabled" value="@hrName2" class="form-control col-lg-4">
            </div>
        </div>
        <div class="col-lg-4">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-dark">HR2 Contact</button>
                </span>
                <input type="text" disabled="disabled" value="@hrContact2" class="form-control col-lg-4">
            </div>
        </div>
        <div class="col-lg-4">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-dark">HR2 Email</button>
                </span>
                <input type="text" disabled="disabled" value="@hrEmail2" class="form-control col-lg-4">
            </div>
        </div>
    </div>
    </div>

<div class="form-group">
    @Html.LabelFor(model => model.CompanyFollowUp.FollowUpDate, new { @class = "control-label col-md-4 col-sm-3 col-xs-12" })
    <div class="col-md-4 col-sm-6 col-xs-12 dob">
        @Html.TextBoxFor(model => model.CompanyFollowUp.FollowUpDate, "{0:dd MMMM yyyy}", new { @class = "form-control col-md-7 col-xs-12 date" })
        @Html.ValidationMessageFor(model => model.CompanyFollowUp.FollowUpDate, "", new { @class = "help-block" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.CompanyFollowUp.Remark, new { @class = "control-label col-md-4 col-sm-3 col-xs-12" })
    <div class="col-md-4 col-sm-6 col-xs-12">
        @Html.EditorFor(model => model.CompanyFollowUp.Remark, new { @class = "form-control col-md-7 col-xs-12" })
        @Html.ValidationMessageFor(model => model.CompanyFollowUp.Remark, "", new { @class = "help-block" })
    </div>
</div>


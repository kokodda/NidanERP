@using Nidan.Extensions
@{
   // ViewBag.Title = "CandidateInstallment";
}

<div ng-controller="RegistrationController as model">
    <div class="page-title">
        <div class="title_left">
            <h3>
                Candidate Installment <small></small>
            </h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" ng-model="searchField" ng-keyup="$event.keyCode == 13 && model.searchCandidateInstallment(searchField)" class="form-control" placeholder="Search for Candidate...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" ng-click="model.searchCandidateInstallment(searchField)" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    @if (User.IsInAnyRoles("Admin"))
    {
        @*<div class="row">
            <div class="col-xs-12">
                <a class="btn btn-app" href="@Url.Action("Create", "CandidateFee")">
                    <i class="fa fa-user"></i> Create
                </a>
            </div>
        </div>*@
    }
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        Candidate Fees Details<small></small>
                    </h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                    </p>
                    <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                        <div class="row">
                            <div class="col-xs-12">
                                @Html.Partial("Pagination/_pageSize")
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12">
                                <table id="tblProducts" wt-responsive-table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                                    <thead>
                                    <tr role="row">
                                        <th ng-click="model.order('Registration.Enquiry.FirstName')" ng-class="model.orderClass('Registration.Enquiry.FirstName')">Candidate Name</th>
                                        <th ng-click="model.order('Registration.CandidateInstallment.CourseFee')" ng-class="model.orderClass('Registration.CandidateInstallment.CourseFee')">Total Fees</th>
                                        <th ng-click="model.order('PaidAmount')" ng-class="model.orderClass('PaidAmount')">Paid Amount</th>
                                        <th ng-click="model.order('Balance')" ng-class="model.orderClass('Balance')">Balance</th>
                                        <th>Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr ng-repeat="registration in model.Registrations" class="odd gradeX" ng-click="$event.originalEvent.ngClickHandled || model.viewRegistration(registration.RegistrationId)">
                                        <td><span ng-bind="registration.Enquiry.FirstName"></span> <span ng-bind="registration.Enquiry.MiddleName"></span> <span ng-bind="registration.Enquiry.LastName"></span></td>
                                        <td class="totalfee" name="totalfee"><span ng-bind="registration.CandidateInstallment.CourseFee"></span></td>
                                        <td class="paidamt" name="paidamt"><span ng-bind="registration.CandidateFee.PaidAmount"></span></td>
                                        <td class="balance" name="subtot"></td>
                                        <td>
                                            <div class="btn-group pull-right">
                                                <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true">
                                                    <i class="fa fa-chevron-down"></i>
                                                </a>
                                                <ul class="dropdown-menu slidedown">
                                                    @if (User.IsInAnyRoles("Admin"))
                                                    {
                                                        @*<li>
                                                            <a style="cursor: pointer;" ng-href="/CandidateFee/Edit/{{candidateFee.CandidateFeeId}}">
                                                                View Details
                                                            </a>
                                                        </li>*@
                                                    }
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @Html.Partial("Pagination/_pagination")
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <label ng-bind="model.searchMessage"></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script>
       
        $(document)
           .ready(function () {
          
               var $tblrows = $("#tblProducts tbody tr td");

            $tblrows.each(function () {
                var $tblrow = $(this);

                $tblrow.find('.totalfee').ready(function () {

                    var totalfee = $tblrow.find("[name=totalfee]").val();
                    var paidamt = $tblrow.find("[name=paidamt]").val();
                    var subtot = parseInt(totalfee) - parseInt(paidamt);
                    $('.subtot').val(subtot.toFixed(2));
                    
                });
            });
        });

</script>
}



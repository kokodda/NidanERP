@model Nidan.Models.CandidateFeeViewModel

@{
    ViewBag.Title = "Detail";
}

<h2>Detail</h2>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    Candidate Fees Details<small></small>
                </h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                    </p>
                    <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-xs-12">
                                <table id="tblCandidateFees" wt-responsive-table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                                    <thead>
                                        <tr role="row">
                                            <th>Candidate Name</th>
                                            <th>Total Fees</th>
                                        </tr>
                                    </thead>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.HiddenFor(model => model.CandidateFee.CandidateFeeId)
                                        @Html.HiddenFor(model => model.CandidateFee.CandidateInstallmentId)
                                    }

                                    <tbody id="tbody">
                                        @foreach (var item in Model.CandidateFeeList)
                                        {
                                            <tr>
                                                <td>@item.BankName</td>
                                                <td>@item.CandidateInstallment.CourseFee</td>
                                                <td>
                                                    <button id="btnPayFee" type="button" class="btn btn-success" ng-click="model.removeError()" data-toggle="modal" data-target="#candidateFeeModal">Pay</button>
                                                    @*<button id="btnPayFee" type="button" class="btn btn-success" disabled="disabled">Print</button>*@
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @*     @Html.Partial("Pagination/_pagination")*@
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <label ng-bind="model.searchMessage"></label>
                        </div>
                    </div>
            </div>
        </div>
        <div ng-controller="CandidateFeeController as model" ng-init="model.initialise(@Model.CandidateFeeId.ToString())">
                @using (Html.BeginForm("Edit", "CandidateFee", FormMethod.Post, new { encType = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Partial("_CandidateFee")
                }
            </div>
    </div>
</div>
@section scripts
{
    <script>
        $('.bank-details-textbox').hide();
        $("#CandidateFee_PaymentModeId").change(function () {
            if ($('#CandidateFee_PaymentModeId :selected').text() == "Cheque") {
                $('.bank-details-textbox').show();
                $("#CandidateFee_BankName").val("");
                $("#CandidateFee_ChequeNumber").val("");
            } else {
                $('.bank-details-textbox').hide();
            }
        });

        $(function () {
            var daterangepickerOptions = {
                autoApply: true,
                singleDatePicker: true,
                showDropdowns: true,
                showCustomRangeLabel: false,
                opens: 'left',
                minDate: moment(),
                //maxDate: moment().add('2', 'days').format('DD MMMM YYYY'),
                onSelect: function () {
                    selectedDate = moment().format('DD MMMM YYYY');
                },
                locale: {
                    "format": "DD MMMM YYYY"
                }
            };

            jQuery(function () {
                jQuery(".date").daterangepicker(daterangepickerOptions);
                $('#GeneratedDate').val(moment().format('DD MMMM YYYY'));
                $(".generated .date").on('apply.daterangepicker', function (ev, picker) {
                    $(this).val(picker.startDate.format('DD MMMM YYYY'));
                });
            });
        });
    </script>
}

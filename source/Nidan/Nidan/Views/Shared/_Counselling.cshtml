@using Nidan.Extensions
@model Nidan.Models.CounsellingViewModel
<div class="form-control-required-example"> = Required</div>

@Html.HiddenFor(m => m.Counselling.CounsellingId)
@Html.HiddenFor(m => m.Counselling.EnquiryId)

<div class="row">
    <div class="col-lg-12">
        <div class="col-md-2">
            <div class="form-group">
                @*@Html.LabelFor(model => model.Counselling.Title, new { @class = "control-label col-md-4 col-sm-4 col-xs-12" })*@
                <div class="col-md-10 col-sm-4 col-xs-12">
                    @Html.DropDownListFor(model => model.Counselling.Enquiry.Title, Model.TitleList, "Select Title", new { @class = "form-control", @disabled = "true" })
                    @Html.ValidationMessageFor(model => model.Counselling.Title, "", new { @class = "help-block" })
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(model => model.Counselling.Enquiry.FirstName, new { @class = "control-label col-md-4 col-sm-6 col-xs-12" })
                <div class="col-md-8 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(model => model.Counselling.Enquiry.FirstName, new { @class = "form-control", @readonly = "true" })
                    @Html.ValidationMessageFor(model => model.Counselling.Enquiry.FirstName, "", new { @class = "help-block" })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Counselling.Enquiry.MiddelName, new { @class = "control-label col-md-4 col-sm-6 col-xs-12" })

<div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12">Enquiry Status</label>
    <div class="col-md-6 col-sm-6 col-xs-12">
        <div id="gender" class="btn-group" data-toggle="buttons">
            <label class='@(Model.Mobilization.MobilizerStatus=="Open"?"btn btn-primary":"btn btn-default")' data-toggle-passive-class="btn-default">
                @Html.RadioButtonFor(model => model.Mobilization.MobilizerStatus, "Open")
                <input type="radio" name="EnquiryStatus" value="open" data-parsley-multiple="gender"> &nbsp; Open &nbsp;
            </label>
            <label class='@(Model.Mobilization.MobilizerStatus=="Closed"?"btn btn-primary":"btn btn-default")' data-toggle-passive-class="btn-default">
                @Html.RadioButtonFor(model => model.Mobilization.MobilizerStatus, "Closed")
                <input type="radio" name="EnquiryStatus" value="closed" data-parsley-multiple="gender"> Closed
            </label>
        </div>
    </div>
</div>
@model Nidan.Models.MobilizationViewModel
<div class="form-control-required-example"> = Required</div>

<div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12">Event Id</label>
    <div class="col-md-6 col-sm-6 col-xs-12">
        <select class="form-control">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
        </select>
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.Mobilization.Name, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
    <div class="col-md-6 col-sm-6 col-xs-12">
        @Html.TextBoxFor(model => model.Mobilization.Name, new { @class = "form-control col-md-7 col-xs-12" })
        @Html.ValidationMessageFor(model => model.Mobilization.Name, "", new { @class = "help-block" })
    </div>
</div>


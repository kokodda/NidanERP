@using Nidan.Extensions
@model Nidan.Models.EventViewModel
<div role="tabpanel" class="tab-pane fade active in" id="tab_content_brainstorming" aria-labelledby="home-tab">
    <p>
        Brain Storming
    </p>
</div>

<div ng-controller="BrainstormingController as model">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                    </p>
                    <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        @*<div class="row">
                                <div class="col-xs-12">
                                    @Html.Partial("Pagination/_pageSize")
                                </div>
                            </div>*@
                        <div class="row">
                            <div class="col-xs-12">
                                <table wt-responsive-table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                                    <thead>
                                        <tr role="row">
                                            <th>Sr No.</th>
                                            <th>Before Planning Answer/Discuss These Question</th>
                                            <th>Disscussion Completed Y/N</th>
                                            <th>Refernce Detail</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="brainstorming in model.brainstormings" class="odd gradeX" ng-click="$event.originalEvent.ngClickHandled">
                                            <td><span ng-bind="brainstorming.BrainstormingId"></span></td>
                                            <td><span ng-bind="brainstorming.BeforePlanningAnswerDiscussTheseQuestion"></span></td>
                                            <td>
                                               @Html.RadioButtonFor(model => model.EventBrainstorming.DisscussionCompletedYesNo, "Yes")&nbsp; Yes &nbsp;
                                                @Html.RadioButtonFor(model => model.EventBrainstorming.DisscussionCompletedYesNo, "No") No
                                            </td>
                                            <td>
                                                @Html.EditorFor(model => model.EventBrainstorming.RefernceDetailDocument)
                                            </td>
                                    </tbody>
                                </table>

                                @Html.Partial("Pagination/_pagination")
                            </div>
                        </div>
                        <div class="col-md-9 col-sm-12 col-xs-12 col-md-offset-3">
                            <div class="form-group">
                                @*ng-if="model.paging.totalPages==model.paging.Page"*@
                                <div class="pull-right">
                                    <button type="submit" class="btn btn-success">
                                        Submit
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

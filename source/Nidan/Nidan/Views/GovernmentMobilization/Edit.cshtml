@model Nidan.Models.GovernmentMobilizationViewModel
@{
    ViewBag.Title = string.Format("Edit Govt Mobilization ({0})", Model.GovernmentMobilization.Name);
}
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">

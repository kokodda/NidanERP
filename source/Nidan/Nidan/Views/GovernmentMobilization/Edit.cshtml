        $('#GovernmentMobilization_DistrictId').change(function () {
            var districtId = $('#GovernmentMobilization_DistrictId :selected').val();
            $.ajax({
                url: '/GovernmentMobilization/GetDistrictBlock',
                type: 'POST',
                data: JSON.stringify({ districtId: districtId }),
                dataType: 'json',

@model Nidan.Models.BatchViewModel

@{
    ViewBag.Title = string.Format("Edit Mobilization ({0})", Model.Batch.BatchId);
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                @*<h2>@Model.Mobilization.Name<small>Edit mobilizer</small></h2>*@
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @if (ViewContext.ViewData.ModelState.Any(x => x.Key == ""))
                        {
                            <div class="row">
                                <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                                    @Html.ValidationSummary(false, null, new { @class = "row alert alert-error" })
                                </div>
                            </div>

                        }
                        @Html.HiddenFor(model => Model.Batch.BatchId)
                        @Html.HiddenFor(model => Model.Batch.CreatedDate)
                        @Html.Partial("_Batch", Model)
                        <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                            <div class="form-group">
                                <div class="pull-right">
                                    <button type="submit" class="btn btn-success">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div>
    <a href="@Url.Action("Index")" class="btn btn-primary" role="button">
        <span class="fa fa-chevron-left"></span>&nbsp;Back to list
    </a>
</div>
@section scripts {
    <script>
        $("#Batch_NoOfHrs").val("");

        if ($('#Batch_SchemeId :selected').text() == "Commercial") {
            $('.batchtype-radiobutton').show();
        } else {
            $('.batchtype-radiobutton').hide();
        }
        $("#Batch_SchemeId").change(function () {
            if ($('#Batch_SchemeId :selected').text() == "Commercial") {
                $('.batchtype-radiobutton').show();
            } else {
                $('.batchtype-radiobutton').hide();
            }
        });

        $('#Batch_SectorId').change(function () {
            var sectorId = $('#Batch_SectorId :selected').val();
            $.ajax({
                url: '/Batch/GetCourse',
                type: 'POST',
                data: JSON.stringify({ sectorId: sectorId }),
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                error: function (xhr) {
                    alert('Error: ' + xhr.statusText);
                },
                success: function (result) {
                    $("#Batch_CourseId").empty();
                    $.each(result, function (key, value) {
                        $("#Batch_CourseId").append($("<option></option>").val(value.CourseId).html(value.Name));

                    });
                },
                async: true,
                processData: false
            });
        });

        var daterangepickerOptions = {
            autoApply: true,
            singleDatePicker: true,
            showDropdowns: true,
            showCustomRangeLabel: false,
            opens: 'left',
            minDate: moment(),
            //maxDate: moment().add('2', 'days').format('DD MMMM YYYY'),
            onSelect: function () {
                selectedDate = moment().format('DD MMMM YYYY');
            },
            locale: {
                "format": "DD MMMM YYYY"
            }
        };

        jQuery(function () {
            jQuery(".date").daterangepicker(daterangepickerOptions);
            $('#BatchStartDate').val(moment().format('DD MMMM YYYY'));
            $(".generated .date").on('apply.daterangepicker', function (ev, picker) {
                $(this).val(picker.startDate.format('DD MMMM YYYY'));
            });
        });

        jQuery(function () {
            jQuery(".date").daterangepicker(daterangepickerOptions);
            $('#BatchEndDate').val(moment().format('DD MMMM YYYY'));
            $(".generated .date").on('apply.daterangepicker', function (ev, picker) {
                $(this).val(picker.startDate.format('DD MMMM YYYY'));
            });
        });

        jQuery(function () {
            jQuery(".date").daterangepicker(daterangepickerOptions);
            $('#PreferredAssesmentDate').val(moment().format('DD MMMM YYYY'));
            $(".generated .date").on('apply.daterangepicker', function (ev, picker) {
                $(this).val(picker.startDate.format('DD MMMM YYYY'));
            });
        });
    </script>
}


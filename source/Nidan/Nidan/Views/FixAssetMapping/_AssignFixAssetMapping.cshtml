@*@model Nidan.Models.FixAssetMappingViewModel*@
    
<div class="modal fade" id="fixAssetMappingModal" ng-hide="model.ShowModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Infra Equipment Detail</h2>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label id="labelAssignType" class="control-label col-md-3 col-sm-3 col-xs-12">Assign Type</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select id="dropAssignType" class="form-control col-md-7 col-sm-6 col-xs-12">
                                    <option>Select Assign Type</option>
                                    <option data-ng-repeat="t in model.assignTypes" ng-model="model.assignTypeId" value="{{t.AssignTypeId}}">{{t.Name}}</option>
                                </select>
                            </div>
                            <br />
                            <br />
                        </div>
                        <div id="div_Room">
                            <div class="form-group">
                                <label id="labelRoom" class="control-label col-md-3 col-sm-3 col-xs-12">Room</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <select id="dropRoom" class="form-control col-md-7 col-sm-6 col-xs-12">
                                        <option>Select Room</option>
                                        <option data-ng-repeat="t in model.rooms" ng-model="model.roomId" value="{{t.RoomId}}">{{t.Description}}</option>
                                    </select>
                                </div>
                                <br />
                                <br />
                            </div>
                        </div>
                        <div id="div_assignoutowner">
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">Assign Out Owner</label>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <input id="txtAssignOutOwner" type="text" class="form-control" />
                                </div>
                                <br />
                                <br />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Assign Out Date</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="txtAssignOutDate" type="text" class="form-control date" />
                            </div>
                            <br />
                            <br />
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Remark</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="txtRemark" type="text" class="form-control" />
                            </div>
                            <br />
                            <br />
                        </div>
                        </div>
                        <div class="modal-footer">
                            <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                                <div class="form-group">
                                    <div class="control-label col-md-14 col-sm-14 col-xs-12">
                                        <div class="pull-right col-md-12">
                                            <div class="col-md-9">
                                                <button type="submit" id="btnassignFixAsset" ng-click="model.assignFixAsset()" class="btn btn-success" data-dismiss="modal">Assign</button>
                                            </div>
                                            <div class="pull-right col-md-3">
                                                <button type="button" id="btnCancel" ng-click="model.retrieveFixAssetMappingbyAssetClassId(model.assetClassId)" class="btn btn-info" data-dismiss="modal">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    


@model Nidan.Models.ModuleExamQuestionSetViewModel

<div ng-controller="ModuleExamSetController as model" ng-init="model.retrieveModuleExamQuestionSets(@Model.ModuleExamSetId)">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        Module Exam Question Answer <small></small>
                    </h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                    </p>
                    <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-xs-12">
                                @Html.Partial("Pagination/_pageSize")
                                @*@Model.ModuleExamSet.TotalMark-@Model.ModuleExamSet.ModuleExamQuestionSets.Sum(e => e.MarkPerQuestion)*@
                                <div>
                                    @{
                                        var totalmark = @Model.ModuleExamSet.TotalMark;
                                        var markper = @Model.ModuleExamSet.ModuleExamQuestionSets.Sum(e => e.MarkPerQuestion);
                                        var ans = (totalmark - markper);
                                    }
                                   Marks Alloted = @markper
                                </div>
                            </div>
                            <div>
                                @*@Model.Sum(b => b.KwotaOplaty)*@

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <table wt-responsive-table class="table table-striped table-bordered jambo_table table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                                    <thead>
                                        <tr role="row">
                                            <th>Question</th>
                                            <th>Question Type</th>
                                            <th>Mark Per Question</th>
                                            <th>Answer Type</th>
                                            <th>Answer</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="moduleExamSet in model.moduleExamSets" class="odd gradeX" ng-click="$event.originalEvent.ngClickHandled">
                                            <td><span ng-bind="moduleExamSet.QuestionDescription"></span></td>
                                            <td><span ng-bind="moduleExamSet.QuestionTypeName"></span></td>
                                            <td><span ng-bind="moduleExamSet.MarkPerQuestion"></span></td>
                                            <td><span ng-bind="moduleExamSet.AnswerType"></span></td>
                                            <td><span ng-bind="moduleExamSet.CorrectAnswer"></span></td>
                                            <td>
                                                <div class="btn-group pull-right">
                                                    <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true">
                                                        <i class="fa fa-chevron-down"></i>
                                                    </a>
                                                    <ul class="dropdown-menu slidedown">
                                                        <li>
                                                            <a style="cursor: pointer;">
                                                                Delete
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @Html.Partial("Pagination/_pagination")
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <label ng-bind="model.searchMessage"></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

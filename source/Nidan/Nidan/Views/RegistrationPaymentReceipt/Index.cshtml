@using Nidan.Extensions
@{
    ViewBag.Title = "Registration";
}

<div ng-controller="RegistrationPaymentReceiptController as model">
    <div class="page-title">
        <div class="title_left">
            <h3>
                Registrations <small></small>
            </h3>
        </div>
        @*<div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" ng-model="searchField" ng-keyup="$event.keyCode == 13 && model.searchCounselling(searchField)" class="form-control" placeholder="Search for Counselling...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" ng-click="model.searchCounselling(searchField)" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>*@
    </div>
    @if (User.IsInAnyRoles("Admin"))
    {
        <div class="row">
            <div class="col-xs-12">
                <a class="btn btn-app" href="@Url.Action("Create", "RegistrationPaymentReceipt")">
                    <i class="fa fa-user"></i> Create
                </a>
            </div>
        </div>
    }
    @*Search*@
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                        @*<h2>
                            Centres <small></small>
                        </h2>*@
                        <div class="clearfix"></div>
                    </div>
                <div class="x_content">
                    <p class="text-muted font-13 m-b-30">
                    </p>
                    <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-xs-12">
                                @Html.Partial("Pagination/_pageSize")
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <table wt-responsive-table class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                                    <thead>
                                        <tr role="row">
                                            <th ng-click="model.order('Enquiry.CandidateName')" ng-class="model.orderClass('Enquiry.CandidateName')">Candidate Name</th>
                                            <th ng-click="model.order('Enquiry.Mobile')" ng-class="model.orderClass('Enquiry.Mobile')">Mobile</th>
                                            <th ng-click="model.order('PaymentMode.Name')" ng-class="model.orderClass('PaymentMode.Name')">Payment Mode</th>
                                            <th ng-click="model.order('Fees')" ng-class="model.orderClass('Fees')">Fees</th>
                                            <th ng-click="model.order('Particulars')" ng-class="model.orderClass('Particulars')">Particulars</th>
                                            <th ng-click="model.order('RegistrationDate')" ng-class="model.orderClass('RegistrationDate')">Registration Date</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="registrationPaymentReceipt in model.registrationPaymentReceipts" class="odd gradeX" ng-click="$event.originalEvent.ngClickHandled || model.viewRegistrationPaymentReceipt(registrationPaymentReceipt.RegistrationPaymentReceiptId)">
                                            <td><span ng-bind="registrationPaymentReceipt.Enquiry.CandidateName"></span></td>
                                            <td><span ng-bind="registrationPaymentReceipt.Enquiry.Mobile"></span></td>
                                            <td><span ng-bind="registrationPaymentReceipt.PaymentMode.Name"></span></td>
                                            <td><span ng-bind="registrationPaymentReceipt.Fees"></span></td>
                                            <td><span ng-bind="registrationPaymentReceipt.Particulars"></span></td>
                                            <td><span ng-bind="registrationPaymentReceipt.RegistrationDate|date : format : shortDate"></span></td>
                                            <td>
                                                <div class="btn-group pull-right">
                                                    <a class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false" ng-click="$event.originalEvent.ngClickHandled = true">
                                                        <i class="fa fa-chevron-down"></i>
                                                    </a>
                                                    <ul class="dropdown-menu slidedown">
                                                        @if (User.IsInAnyRoles("Admin"))
                                                        {
                                                            <li>
                                                                <a style="cursor: pointer;" ng-href="/RegistrationPaymentReceipt/ViewDetails/{{registrationPaymentReceipt.RegistrationPaymentReceiptId}}">
                                                                    View Details
                                                                </a>
                                                            </li>
                                                        }
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @Html.Partial("Pagination/_pagination")
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <label ng-bind="model.searchMessage"></label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@using Nidan.Extensions
@model Nidan.Models.ReportViewModel

@{
    ViewBag.Title = "MobilizationProcessReportByByDate";
}

<div ng-controller="ReportController as model">
    <div class="page-title">
        <div class="title_left">
            <h3>
                Mobilization Process Report By Date <small></small>
            </h3>
        </div>
    </div>
    <div id="reportByDate" class="row">
        <div class="col-lg-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        Report By Date<small></small>
                    </h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CentreId, "Centre", new {@class = "control-label col-md-3 col-sm-3 col-xs-12"})
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(model => model.CentreId, Model.Centres, "Select Centre", new {@class = "form-control col-md-7 col-xs-12", ng_model = "model.centreId"})
                            @Html.ValidationMessageFor(model => model.CentreId, "", new {@class = "help-block"})
                        </div>
                    </div>
                    <p class="text-muted font-13 m-b-30">
                    </p>
                    <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-lg-1">
                                    <div class="form-group">
                                        <label>From Date</label>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <input id="fromDate" type="text" ng-model="fromDate" class="form-control col-md-7 col-xs-12 date">
                                    </div>
                                </div>
                                <div class="col-lg-1">
                                    <div class="form-group">
                                        <label>To Date</label>
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <div class="form-group">
                                        <input id="toDate" type="text" ng-model="toDate" class="form-control col-md-7 col-xs-12 date">
                                    </div>
                                </div>
                                <div class="col-lg-1">
                                    <div class="form-group">
                                        <label></label>
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <div class="form-group">
                                        <button type="button" ng-click="model.searchMobilizationCountReportBydate(model.centreId,fromDate,toDate)" class="btn btn-primary"><i class="fa fa-search"></i> Search</button>
                                    </div>
                                </div>
                                <div class="x_content">
                                    <p class="text-muted font-13 m-b-30">
                                    </p>
                                    <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                                        <div class="row">
                                            <div class="col-xs-12">
                                                @Html.Partial("Pagination/_pageSize")
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <table wt-responsive-table class="table table-striped table-bordered jambo_table table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                                                    <thead>
                                                    <tr role="row">
                                                        @if (User.IsInAnyRoles("SuperAdmin"))
                                                        {
                                                            <th ng-click="model.order('CentreName')" ng-class="model.orderClass('CentreName')">Centre</th>
                                                        }
                                                        <th ng-click="model.order('Date')" ng-class="model.orderClass('Date')">Date</th>
                                                        <th ng-click="model.order('MobilizationCount')" ng-class="model.orderClass('Description')">Mobilization Count</th>
                                                        <th ng-click="model.order('EnquiryCount')" ng-class="model.orderClass('CourseType')">Enquiry Count</th>
                                                        <th ng-click="model.order('CounsellingCount')" ng-class="model.orderClass('Capacity')">Counselling Count</th>
                                                        <th ng-click="model.order('RegistrationCount')" ng-class="model.orderClass('SquareFeet')">Registration Count</th>
                                                        <th ng-click="model.order('AdmissionCount')" ng-class="model.orderClass('SquareFeet')">Admission Count</th>
                                                        <th ng-click="model.order('CourseBooking')" ng-class="model.orderClass('SquareFeet')">Course Booking</th>
                                                        <th ng-click="model.order('FeeCollected')" ng-class="model.orderClass('FeeCollected')">Fee Collected</th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    <tr ng-repeat="report in model.reports" class="odd gradeX">
                                                        @if (User.IsInAnyRoles("SuperAdmin"))
                                                        {
                                                            <td><span ng-bind="report.CentreName"></span></td>
                                                        }
                                                        <td><span ng-bind="report.Date|date : format : shortDate"></span></td>
                                                        <td><span ng-bind="report.MobilizationCount"></span></td>
                                                        <td><span ng-bind="report.EnquiryCount"></span></td>
                                                        <td><span ng-bind="report.CounsellingCount"></span></td>
                                                        <td><span ng-bind="report.RegistrationCount"></span></td>
                                                        <td><span ng-bind="report.AdmissionCount"></span></td>
                                                        <td><span ng-bind="report.CourseBooking"></span></td>
                                                        <td><span ng-bind="report.FeeCollected"></span></td>
                                                    </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        @Html.Partial("Pagination/_pagination")
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <label ng-bind="model.searchMessage"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>
        $(function () {

            var daterangepickerOptions = {
                autoApply: true,
                singleDatePicker: true,
                showDropdowns: true,
                showCustomRangeLabel: false,
                opens: 'left',
                //minDate: moment(),
                //maxDate: moment().add('2', 'days').format('DD MMMM YYYY'),
                onSelect: function () {
                    selectedDate = moment().format('DD MMMM YYYY');
                },
                locale: {
                    "format": "DD MMMM YYYY"
                }
            };

            jQuery(function () {
                jQuery(".date").daterangepicker(daterangepickerOptions);
                $('.date').val(moment().format('DD MMMM YYYY'));
                $(".date").on('apply.daterangepicker', function (ev, picker) {
                    $(this).val(picker.startDate.format('DD MMMM YYYY'));
                });
            });
        });
    </script>
}
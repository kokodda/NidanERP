@using Nidan.Extensions

@{
    ViewBag.Title = "Expense";
}

<div ng-controller="ReportController as model" ng-init="model.availablePettyCashReport()">
    <div class="row">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    Available Petty Cash Report <small></small>
                </h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <p class="text-muted font-13 m-b-30">
                </p>
                <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="row">
                        <div class="col-xs-12">
                            <table wt-responsive-table class="table table-striped table-bordered jambo_table table-hover dataTable no-footer" role="grid" aria-describedby="datatable-fixed-header_info">
                                <thead>
                                    <tr role="row">
                                        <th>Centre</th>
                                        <th>Available Petty Cash</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="report in model.reports" ng-click='model.viewCentrePettyCashByCentreId(report.CentreId)'>
                                        <td><span ng-bind="report.CentreName"></span></td>
                                        <td><span ng-bind="report.AvailablePettyCash"></span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
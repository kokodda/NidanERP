@model Nidan.Models.ActivityTaskViewModel
@Html.HiddenFor(model => Model.ActivityTask.CentreId)
@Html.HiddenFor(model => Model.ActivityTask.AssignTo)
@Html.HiddenFor(model => Model.ActivityTask.StartHour)
@Html.HiddenFor(model => Model.ActivityTask.StartMinute)
@Html.HiddenFor(model => Model.ActivityTask.EndHour)
@Html.HiddenFor(model => Model.ActivityTask.EndMinute)
<div class="modal fade" id="addTaskStatus" ng-hide="model.ShowModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Add Task Status</h2>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Completed Date</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="txtCompletedDate" type="text" class="form-control date" />
                            </div>
                            <br />
                            <br />
                        </div>
                        <div class="form-group">
                            <label id="labelStatus" class="control-label col-md-3 col-sm-3 col-xs-12">Status</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select id="dropStatus" class="form-control col-md-7 col-sm-6 col-xs-12">
                                    <option>Select Status</option>
                                    <option data-ng-repeat="t in model.taskStates" ng-model="model.taskStateId" value="{{t.TaskStateId}}">{{t.Name}}</option>
                                </select>
                            </div>
                            <br /> 
                            <br />
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Remark</label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input id="txtRemark" type="text" class="form-control" />
                            </div>
                            <br />
                            <br />
                        </div>
                        <div class="modal-footer">
                            <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                                <div class="form-group">
                                    <div class="control-label col-md-14 col-sm-14 col-xs-12">
                                        <div class="pull-right col-md-12">
                                            <div class="col-md-9">
                                                <button type="submit" id="btnSave" ng-click="model.createTaskStatus()" class="btn btn-success" data-dismiss="modal">Save</button>
                                            </div>
                                            <div class="pull-right col-md-3">
                                                <button type="button" id="btnCancel" class="btn btn-info" data-dismiss="modal">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model Nidan.Models.CandidatePostPlacementViewModel

<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-6">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-dark">Candidate Name</button>
                </span>
                <input type="text" disabled="disabled" value="@Model.CandidateName" class="form-control col-lg-4">
            </div>
        </div>
        <div class="col-lg-6">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-dark">Email</button>
                </span>
                <input type="text" disabled="disabled" value="@Model.EmailId" class="form-control col-lg-4">
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="col-lg-6">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-dark">Mobile</button>
                </span>
                <input type="text" disabled="disabled" value="@Model.Mobile" class="form-control col-lg-4">
            </div>
        </div>
        <div class="col-lg-6">
            <div class="input-group">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-dark">Course</button>
                </span>
                <input type="text" disabled="disabled" value="@Model.Course" class="form-control col-lg-4">
            </div>
        </div>
    </div>
</div>

<div class="form-group ">
    @Html.LabelFor(model => model.CandidatePostPlacement.CompanyId, "Company", new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
    <div class="col-md-6 col-sm-6 col-xs-12">
        @Html.DropDownListFor(model => model.CandidatePostPlacement.CompanyId, Model.Companies, "Select Company", new { @class = "form-control col-md-7 col-xs-12" })
        @Html.ValidationMessageFor(model => model.CandidatePostPlacement.CompanyId, "", new { @class = "help-block" })
    </div>
</div>

<div class="form-group ">
    @Html.LabelFor(model => model.CandidatePostPlacement.CompanyBranchId, "Company Branch", new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
    <div class="col-md-6 col-sm-6 col-xs-12">
        @Html.DropDownListFor(model => model.CandidatePostPlacement.CompanyBranchId, Model.CompanyBranches, "Select Company Branch", new { @class = "form-control col-md-7 col-xs-12" })
        @Html.ValidationMessageFor(model => model.CandidatePostPlacement.CompanyBranchId, "", new { @class = "help-block" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.CandidatePostPlacement.Feedback, "Feedback", new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
    <div class="col-md-6 col-sm-6 col-xs-12">
        @Html.EditorFor(model => model.CandidatePostPlacement.Feedback, new { @class = "form-control col-md-7 col-xs-12" })
        @Html.ValidationMessageFor(model => model.CandidatePostPlacement.Feedback, "", new { @class = "help-block" })
    </div>
</div>

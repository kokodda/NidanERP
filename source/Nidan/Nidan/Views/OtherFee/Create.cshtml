    <div ng-controller="DocumentController as model" ng-init="model.initialise(@Model.CashMemo)">
        @Html.Partial("_OtherFeeDocument")
    </div>*@
}

<div>
    <a href="@Url.Action("Index")" class="btn btn-primary" role="button">
        <span class="fa fa-chevron-left"></span>&nbsp;Back to list
    </a>
</div>
@section scripts {
    <script>
        $('#OtherFee_DebitAmount').val("");
        $('#OtherFee_Project').val("");
        $('#OtherFee_Unit').val("");
        $('#OtherFee_Rate').val("");
        $('#OtherFee_Description').val("");
        $('#OtherFee_RupeesInWord').val("");
        $('#OtherFee_Particulars').val("");
        $('#OtherFee_Rate').keyup(function () {
            var unit = $('#OtherFee_Unit').val();
            var rate = $('#OtherFee_Rate').val();
            var amount = unit * rate;
            $('#OtherFee_DebitAmount').val(amount);
            numberToWords();
        });
        $('#OtherFee_Unit').keyup(function () {
            var unit = $('#OtherFee_Unit').val();
            var rate = $('#OtherFee_Rate').val();
            if (unit != 0 || rate != 0) {
                var amount = unit * rate;
                $('#OtherFee_DebitAmount').val(amount);
                numberToWords();
            }

        });

        function numberToWords() {
            var inputNumber = $('#OtherFee_DebitAmount').val();
            var str = new String(inputNumber);
            var splt = str.split("");
            var rev = splt.reverse();
            var once = ['Zero', ' One', ' Two', ' Three', ' Four', ' Five', ' Six', ' Seven', ' Eight', ' Nine'];
            var twos = [
                'Ten', ' Eleven', ' Twelve', ' Thirteen', ' Fourteen', ' Fifteen', ' Sixteen', ' Seventeen',
                ' Eighteen', ' Nineteen'
            ];
            var tens = [
                '', 'Ten', ' Twenty', ' Thirty', ' Forty', ' Fifty', ' Sixty', ' Seventy', ' Eighty', ' Ninety'
            ];

            var numLength = rev.length;
            var word = new Array();
            var j = 0;
            var i;
            for (i = 0; i < numLength; i++) {
                switch (i) {
                    case 0:
                        if ((rev[i] == 0) || (rev[i + 1] == 1)) {
                            word[j] = '';
                        } else {
                            word[j] = '' + once[rev[i]];
                        }
                        word[j] = word[j];
                        break;

                    case 1:
                        aboveTens();
                        break;

                    case 2:
                        if (rev[i] == 0) {
                            word[j] = '';
                        } else if ((rev[i - 1] == 0) || (rev[i - 2] == 0)) {
                            word[j] = once[rev[i]] + " Hundred ";
                        } else {
                            word[j] = once[rev[i]] + " Hundred and";
                        }
                        break;

                    case 3:
                        if (rev[i] == 0 || rev[i + 1] == 1) {
                            word[j] = '';
                        } else {
                            word[j] = once[rev[i]];
                        }
                        if ((rev[i + 1] != 0) || (rev[i] > 0)) {
                            word[j] = word[j] + " Thousand";
                        }
                        break;


                    case 4:
                        aboveTens();
                        break;

                    case 5:
                        if ((rev[i] == 0) || (rev[i + 1] == 1)) {
                            word[j] = '';
                        } else {
                            word[j] = once[rev[i]];
                        }
                        if (rev[i + 1] !== '0' || rev[i] > '0') {
                            word[j] = word[j] + " Lakh";
                        }

                        break;

                    case 6:
                        aboveTens();
                        break;

                    case 7:
                        if ((rev[i] == 0) || (rev[i + 1] == 1)) {
                            word[j] = '';
                        } else {
                            word[j] = once[rev[i]];
                        }
                        if (rev[i + 1] !== '0' || rev[i] > '0') {
                            word[j] = word[j] + " Crore";
                        }
                        break;

                    case 8:
                        aboveTens();
                        break;
                    default:
                        break;
                }
                j++;
            }

            function aboveTens() {
                if (rev[i] == 0) {
                    word[j] = '';
                } else if (rev[i] == 1) {
                    word[j] = twos[rev[i - 1]];
                } else {
                    word[j] = tens[rev[i]];
                }
            }

            word.reverse();
            var finalOutput = '';
            for (i = 0; i < numLength; i++) {
                finalOutput = finalOutput + word[i];
            }
            $('#OtherFee_RupeesInWord').val(finalOutput + " Rupees Only");
        };

        $(document)
            .ready(function () {
                var cashmemo = $('#OtherFee_CashMemo').val();
                var paidTo = $('#OtherFee_PaidTo').val();
                var project = $('#txt_project').val();
                if (cashmemo != "" && paidTo != "") {
                    $('#OtherFee_CashMemo').attr('readonly', true);
                    $('#OtherFee_PaidTo').attr('readonly', true);

                } else {
                    $('#OtherFee_CashMemo').attr('readonly', false);
                    $('#OtherFee_PaidTo').attr('readonly', false);

                }

            });

    </script>
}
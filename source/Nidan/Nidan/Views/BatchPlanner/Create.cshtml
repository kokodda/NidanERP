@model Nidan.Models.BatchPlannerViewModel

@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Create new Batch <small></small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @if (ViewData.ModelState.Values.Any(x => x.Errors.Count >= 1))
                        {
                            <div class="row">
                                <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                                    @Html.ValidationSummary(false, null, new { @class = "row alert alert-error" })
                                </div>
                            </div>
                        }
                        @Html.Partial("_BatchPlanner", Model)
                        <div class="col-md-6 col-sm-12 col-xs-12 col-md-offset-3">
                            <div class="form-group">
                                <div class="pull-right">
                                    <button id="btnsubmit" type="submit" class="btn btn-success">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div>
    <a href="@Url.Action("Index")" class="btn btn-primary" role="button">
        <span class="fa fa-chevron-left"></span>&nbsp;Back to list
    </a>
</div>
@section scripts {
    <script >
        $(function () {
            var daterangepickerOptions = {
                autoApply: true,
                singleDatePicker: true,
                showDropdowns: true,
                showCustomRangeLabel: false,
                opens: 'left',
                //minDate: moment(),
                //maxDate: moment().add('2', 'days').format('DD MMMM YYYY'),
                onSelect: function () {
                    selectedDate = moment().format('DD MMMM YYYY');
                },
                locale: {
                    "format": "DD MMMM YYYY"
                }
            };
            jQuery(function () {
                jQuery(".date").daterangepicker(daterangepickerOptions);
                $('.date').val(moment().format('DD MMMM YYYY'));
                $(".date").on('apply.daterangepicker', function (ev, picker) {
                    $(this).val(picker.startDate.format('DD MMMM YYYY'));
                });
            });
        });

        $('#BatchPlanner_CentreId').change(function () {
            var centreId = $('#BatchPlanner_CentreId :selected').val();
            //Centre Wise ClassRoom
            $.ajax({
                url: '/BatchPlanner/GetClassRoom',
                type: 'POST',
                data: JSON.stringify({ centreId: centreId }),
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                error: function (xhr) {
                    alert('Error: ' + xhr.statusText);
                },
                success: function (result) {
                    $("#BatchPlanner_RoomId").empty();
                    $("#BatchPlanner_RoomId").append($("<option></option>").html("Select Class Room"));
                    $.each(result, function (key, value) {
                        $("#BatchPlanner_RoomId").append($("<option></option>").val(value.RoomId).html(value.Description));
                    });
                },
                async: true,
                processData: false
            });
            //Centre Wise Course
            $.ajax({
                url: '/BatchPlanner/GetCourse',
                type: 'POST',
                data: JSON.stringify({ centreId: centreId }),
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                error: function (xhr) {
                    alert('Error: ' + xhr.statusText);
                },
                success: function (result) {
                    $("#BatchPlanner_CourseId").empty();
                    $("#BatchPlanner_CourseId").append($("<option></option>").html("Select Course"));
                    $.each(result, function (key, value) {
                        $("#BatchPlanner_CourseId").append($("<option></option>").val(value.CourseId).html(value.Name));
                    });
                },
                async: true,
                processData: false
            });
            //Centre Wise Trainer
            $.ajax({
                url: '/BatchPlanner/GetTrainer',
                type: 'POST',
                data: JSON.stringify({ centreId: centreId }),
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                error: function (xhr) {
                    alert('Error: ' + xhr.statusText);
                },
                success: function (result) {
                    $("#BatchPlanner_TrainerId").empty();
                    $("#BatchPlanner_TrainerId").append($("<option></option>").html("Select Trainer"));
                    $.each(result, function (key, value) {
                        $("#BatchPlanner_TrainerId").append($("<option></option>").val(value.TrainerId).html(value.Fullname));
                    });
                },
                async: true,
                processData: false
            });
        });

        //Get CourseData
        $('#BatchPlanner_CourseId')
            .change(function () {
                var courseId = $('#BatchPlanner_CourseId :selected').val();
                $.ajax({
                    url: '/BatchPlanner/GetCourseData',
                    type: 'POST',
                    data: JSON.stringify({ courseId: courseId }),
                    dataType: 'json',
                    contentType: 'application/json; charset=utf-8',
                    error: function (xhr) {
                        alert('Error: ' + xhr.statusText);
                    },
                    success: function (result) {
                        var courseType = result.CourseType;
                        $("#BatchPlanner_CourseType").val(result.CourseType);
                        if (courseType == "Career") {
                            $("#BatchPlanner_SlotType").val("Prime Slot");
                        } else {
                            $("#BatchPlanner_SlotType").val("General Slot");
                        }
                    },
                    async: true,
                    processData: false
                });
            });
    </script>
}